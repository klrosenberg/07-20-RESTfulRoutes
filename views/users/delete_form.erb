<h2>Pick a user to delete</h2>
<form action="/users/confirm_delete" method="post">
  <table>
    <tr>
      <th>All users</th>
    </tr>
    <tr>
  <% @users.each do |user| %>
      <td><input type="radio" name="id" value="<%= user.id %>"><%= user.name%></td>
      <td><%= user.email %></td>
      <td><%= user.password %></td>
    </tr>
  <% end %>
</table>
  <input type="hidden" name="_method" value="delete">
  <p><input type="submit"></p>
</form> 